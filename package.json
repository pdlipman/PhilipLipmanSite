{
  "name": "philip-lipman-site",
  "version": "1.0.0",
  "description": "The website of Philip Lipman",
  "main": "main.jsx",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "prebuild-js": "npm run lint",
    "watch-css": "node-sass -w ./scss/site.scss ./public/dist/css/site.css",
    "prebuild-css": "cp -R node_modules/font-awesome/fonts ./public/dist/",
    "build-css": "node-sass ./scss/site.scss ./public/dist/css/site.css",
    "prebuild-js": "cp -R ./app/assets ./public/app/",
    "watch-js": "watchify -t [ babelify --presets [ react ] ] ./app/main.jsx -o ./public/dist/index.js",
    "build-js": "browserify -t [ babelify --presets [ react ] ] ./app/main.jsx -o ./public/dist/index.js",
    "lr": "live-reload --port 9091 ./public/dist/",
    "watch": "npm run watch-css & npm run watch-js & npm run lr",
    "dist": "npm run build-css && npm run build-js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-eslint": "^4.1.6",
    "bootstrap": "^4.0.0-alpha.2",
    "browserify": "^13.0.1",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.15.0",
    "font-awesome": "^4.6.1",
    "highlight.js": "^9.4.0",
    "history": "^1.17.0",
    "jquery": "^2.2.2",
    "live-reload": "^1.1.0",
    "react-addons-css-transition-group": "^15.0.2",
    "react-fontawesome": "^1.1.0",
    "react-remarkable": "^1.1.1",
    "react-router": "^1.0.3",
    "tether": "^1.2.0",
    "babel-core": "^6.7.6",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babelify": "^7.3.0",
    "node-sass": "^3.8.0",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "watchify": "^3.7.0"
  },
  "devDependencies": {
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.9.2",
    "eslint-plugin-jsx-a11y": "^1.5.3",
    "eslint-plugin-react": "^5.2.2",
    "live-reload": "^1.1.0"
  }
}
