{
  "name": "philip-lipman-site",
  "version": "1.0.0",
  "description": "The website of Philip Lipman",
  "main": "main.jsx",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "prebuild-js": "npm run lint",
    "build-js": "browserify -t [ babelify --presets [ react ] ] app/main.jsx -o build/bundle.js",
    "prebuild-css": "cp -R node_modules/font-awesome/fonts build",
    "build-css": "node-sass --include-path scss scss/site.scss   build/css/site.css",
    "developBuild": "browserify -t [ babelify --presets [ react ] ] app/main.jsx -o build/bundle.js",
    "watch": "watchify -t [ babelify --presets [ react ] ] app/main.jsx -o build/bundle.js & live-reload --port 9091 ./",
    "watch-css": "nodemon -e scss -x \"npm run build-css\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "babel-eslint": "^4.1.6",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babelify": "^7.2.0",
    "bootstrap": "^4.0.0-alpha.2",
    "browserify": "^13.0.1",
    "eslint": "^1.10.3",
    "eslint-plugin-react": "^3.15.0",
    "font-awesome": "^4.6.1",
    "highlight.js": "^9.4.0",
    "history": "^1.17.0",
    "jquery": "^2.2.2",
    "live-reload": "^1.1.0",
    "react": "^0.14.6",
    "react-addons-css-transition-group": "^15.0.2",
    "react-dom": "^0.14.6",
    "react-fontawesome": "^1.1.0",
    "react-remarkable": "^1.1.1",
    "react-router": "^1.0.3",
    "tether": "^1.2.0",
    "watchify": "^3.7.0"
  },
  "devDependencies": {
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-plugin-import": "^1.6.1",
    "eslint-plugin-jsx-a11y": "^1.0.4",
    "eslint-plugin-react": "^3.16.1",
    "node-sass": "^3.5.3",
    "nodemon": "^1.9.1"
  }
}
